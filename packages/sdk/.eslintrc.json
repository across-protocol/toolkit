{
  "root": true,
  "extends": ["@across-toolkit/eslint-config/library.js"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "env": {
    "es2020": true
  },
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["@/*"],
            "message": "Use relative imports instead of path aliases in library code to avoid compilation issues"
          }
        ]
      }
    ]
  }
}
