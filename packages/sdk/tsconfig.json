{
  "extends": "@across-toolkit/typescript-config/base.json",
  "include": ["src"],
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
